<%-include('common/head')%>
  <body id="page-top" >

    <!-- Page Wrapper -->
    <div id="wrapper" >

        <!-- Sidebar -->
        <%-include('common/sidebar')%>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%-include('common/topbar')%>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Activity</h1>
                       
                    </div>

                    <!-- Content Row -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Activity DataTables </h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Post Title</th>
                                            <th>Company</th>
                                            <th>Status</th>
                                            <th>Applied At</th>
                                            
                                        </tr>
                                    </thead>
                                   
                                    <tbody>
                                        <%if(displayData.length >0){
                                            for(let data2 of displayData){%>
                                        <tr>
                                            <td><%=data2.user_name%></td>
                                            <td><%=data2.post_title%></td>
                                            <td><%=data2.post_company%></td>
                                            <td>Applied</td>
                                            <td><%=data2.appliedAt%></td>
                                            
                                        </tr>
                                        <%}}%>
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Content Row -->

                   

                    <!-- Content Row -->
                   

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%-include('common/footer')%>
            <!-- End of Footer -->

    
</body>
</html>