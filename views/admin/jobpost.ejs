<%-include('common/head')%>
  <body id="page-top" >

    <!-- Page Wrapper -->
    <div id="wrapper" >

        <!-- Sidebar -->
        <%-include('common/sidebar')%>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%-include('common/topbar')%>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Job Post</h1>
                       
                    </div>

                    <!-- Content Row -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">JobPost DataTables </h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Job Title</th>
                                            <th>Category</th>
                                            <th>Company</th>
                                            <th>Posted By</th>
                                            <th>Post date</th>
                                            <th>Status</th>
                                            <th>Operation</th>
                                        </tr>
                                    </thead>
                                   
                                    <tbody>
                                        <%if(displayData.length >0){
                                            for(let data2 of displayData){
                                                %>
                                        <tr>
                                            <td><%=data2.jobtitle%></td>
                                            <td><%=data2.category%></td>
                                            <td><%=data2.company%></td>
                                            <td><%=data2.emp_name%></td>
                                            <td><%=data2.createdAt.toDateString()%></td>
                                            <td><%=data2.status%></td>
                                            <% if(data2.status) {%>
                                                <td>
                                                    <a href=" /admin/deactivejob/<%=data2._id %>" class="btn
                                                    btn-danger">Deactive</a>
                                            </td>
                                            <% } else{%>
                                                <td>
                                                    <a href="/admin/activejob/<%= data2._id %>"
                                                        class="btn btn-success">Active</a>
                                                </td>
                                                <% } %>
                                            
                                        </tr>
                                        <%}}%>
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Content Row -->

                   

                    <!-- Content Row -->
                   

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%-include('common/footer')%>
            <!-- End of Footer -->

    
</body>
</html>